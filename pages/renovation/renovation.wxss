@import "/utils/publics/pagetitle.wxss";
/**
引入list样式
 */
@import "/utils/list.wxss";

.list-title {
    height:80rpx;
    width:95%;
    display:flex;
    flex-direction:row;
    font-size:28rpx;
    margin:auto;
}
.region {
    flex:6;
    display:flex;
    flex-direction:row;
    align-items:center;
}
.list-img image { width:24rpx; height:32rpx; }
.list-title-right {
    flex:4;
    display:flex;
    flex-direction:row;
    align-items:center;
}
.sort {
    flex:5;
    display:flex;
    flex-direction:row;
    justify-content:center;
}
.screen {
    flex:5;
    display:flex;
    flex-direction:row;
    justify-content:flex-end;
}
/**
list下拉列表选项
 */
.list-text {
    display:flex;
    flex-direction:row;
    position:relative;
    width:95%;
    margin:auto;
}
.region-text {
    flex:6;
}
.region-text view {
    font-size:28rpx;
    background-color:#E6E6E6;
    margin:8rpx;
    padding:5rpx;
    width:55%;
    text-align:center;
    border-radius:5rpx;
}
.sort-text {
    flex:4;
}
.sort-text view {
    font-size:28rpx;
    background-color:#E6E6E6;
    margin:8rpx;
    padding:5rpx;
    width:55%;
    text-align:center;
    border-radius:5rpx;
}
.screen-text {
    width:100%;
    height:100%;
    position:absolute;
    z-index:999;
}
.house-class { font-size:28rpx; }
.house-class-font {
    display:flex;
    flex-direction:row;
    font-size:28rpx;
}
.house-class-font view {
    flex:1;
    display:flex;
    padding:5rpx;
    margin:8rpx;
}
.house-class-text {
    border-radius:5rpx;
    justify-content:center;
    background-color:#E6E6E6;
}
/**
下拉列表按钮样式
 */
.button-click {
    display:flex;
    flex-direction:row;
    margin-top:18rpx;
}
.button-click view {
    flex:1;
    display:flex;
    justify-content:center;
    align-items:center;
}
.button-click view button {
    width:85%;
    height:100%;
    border-radius:50rpx;
}
.selected {
    background-color:#ff5722;
}