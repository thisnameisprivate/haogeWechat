@import "/utils/publics/pagetitle.wxss";
/**
引入list样式
 */
@import "/utils/list.wxss";

.list-title {
    height:80rpx;
    width:95%;
    display:flex;
    flex-direction:row;
    font-size:28rpx;
    margin:auto;
}
.region {
    flex:6;
    display:flex;
    flex-direction:row;
    align-items:center;
}
.list-img image { width:24rpx; height:32rpx; }
.list-title-right {
    flex:4;
    display:flex;
    flex-direction:row;
    align-items:center;
}
.sort {
    flex:5;
    display:flex;
    flex-direction:row;
    justify-content:center;
}
.screen {
    flex:5;
    display:flex;
    flex-direction:row;
    justify-content:flex-end;
}
/**
list下拉列表选项
 */
.list-text {
    display:flex;
    flex-direction:row;
    position:absolute;
    width:95%;
    margin:auto;
    height:0rpx;
}
.region-text {
    flex:6;
}
.region-text view {
    font-size:28rpx;
    background-color:#E6E6E6;
    margin:8rpx;
    padding:5rpx;
    width:55%;
    text-align:center;
    border-radius:5rpx;
}
.sort-text {
    flex:4;
}
.sort-text view {
    font-size:28rpx;
    background-color:#E6E6E6;
    margin:8rpx;
    padding:5rpx;
    width:55%;
    text-align:center;
    border-radius:5rpx;
}
.screen-text {
    width:100%;
    height:100%;
    position:absolute;
    z-index:999;
}
.house-class { font-size:28rpx; }
.house-class-font {
    display:flex;
    flex-direction:row;
    font-size:28rpx;
}
.house-class-font view {
    flex:1;
    display:flex;
    padding:5rpx;
    margin:8rpx;
}
.house-class-text {
    border-radius:5rpx;
    justify-content:center;
    background-color:#E6E6E6;
}
/**
下拉列表样式背景
 */
.list-background {
    background-color:white;
}
/**
下拉列表按钮样式
 */
.button-click {
    display:flex;
    flex-direction:row;
    margin-top:18rpx;
}
.button-click view {
    flex:1;
    display:flex;
    justify-content:center;
    align-items:center;
}
.button-click view button {
    width:85%;
    height:100%;
    border-radius:50rpx;
}
.selected {
    background-color:#ff5722;
}
/**
标题选项
 */
.house-title {
    display:flex;
    flex-direction:row;
    width: 95%;
    margin:auto;
    height:80rpx;
}
.house-title view {
    flex:1;
    font-size:36rpx;
    display:flex;
    flex-direction:column;
    justify-content:flex-start;
    align-items:center;
}
.house-title-unit view {
    flex:9;
}
.house-title-selected {
    flex:1;
    margin-top:10rpx;
    border-top:2rpx solid red;
    width:50%;
    display:flex;
    align-items:flex-start;
}
.house-title-font-weight { font-weight:600; }
.house-page-unit {
    width:100%;
    margin:auto;
    background-color:rgba(204, 204, 204, 0.1);
}
.house-unit {
    width:95%;
    margin:auto;
    display:flex;
    flex-direction:row;
    margin-top:20rpx;
    background-color:white;
}
.house-unit-image {
    flex:3.5;
    border:1px solid #ccc;
    height:260rpx;
}
.house-unit-image image {
    height:100%;
    width:100%;
}
.house-unit-right {
    flex:6.5;
}
.house-unit-textcontent {
    display:flex;
    flex-direction:row;
}
.house-unit-font {
    height:80rpx;
    width:100%;
}
.house-unit-font-text {
    font-size:36rpx;
    font-weight:600;
    flex:8;
    display:flex;
    justify-content:flex-start;
    align-items:center;
}
.house-unit-isauth {
    font-size:24rpx;
    height:40rpx;
    margin-top:15rpx;
    width:60rpx;
    text-align:center;
    padding:2rpx;
    background-color:rgba(204, 204, 204, 0.1);
    border-radius:2rpx;
}
.house-unit-comment {
    height:50rpx;
    display:flex;
    flex-direction:row;
    align-items:center;
}
.house-unit-comment-image {
    color:#ff5722;
    flex:4;
    display:flex;
}
.house-unit-comment-isComm {
    font-size:28rpx;
    flex:6;
}
.house-unit-comment-font {
    height:50rpx;
    font-size:28rpx;
    color:gray;
}
.house-unit-label {
    height:80rpx;
    width:100%;
    display:flex;
    flex-direction:row;
    font-size:24rpx;
}
.house-unit-label view {
    height:50rpx;
    margin-right:10rpx;
    margin-top:15rpx;
    line-height: 50rpx;
    padding-left:10rpx;
    padding-right:10rpx;
    border-radius:5rpx;
}