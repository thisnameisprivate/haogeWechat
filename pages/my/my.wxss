@import "/utils/publics/pagetitle.wxss";
/**
全屏蒙层, 授权按钮样式
 */
button {
    height:100vh !important;
    width:100% !important;
    background-color:red;
    position:absolute;
    z-index:999;
    opacity: 0;
}
.userInfo {
    height:300rpx;
    width:100%;
    display:flex;
    flex-direction:row;
    background-color:#b7e1f9;
    border-radius:0 0 20rpx 20rpx;
}
.userInfo-left {
    flex:9;
    display:flex;
    flex-direction:row;
}
.userImg image{
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    margin-top:20rpx;
}
.username {
    height:128rpx;
    display:flex;
    align-items:center;
    margin-left:20rpx;
    margin-top:20rpx;
}
.userInfo-right {
    flex:1;
    height:128rpx;
    display:flex;
    flex-direction:column;
    margin-top:20rpx;
}
.moneyImg {
    text-align:center;
}
.moneyImg image{
    height:42rpx;
    width:42rpx;
}
.money {
    font-size:24rpx;
    display:flex;
    align-items:center;
    justify-content:center;
}
/**
按钮样式
 */
.shop-title {
    height:280rpx;
    width:95%;
    margin:0 auto;
    position:absolute;
    z-index:998;
    top:280rpx;
    left:2.5%;
    background-color:white;
    border-radius:20rpx;
    display:flex;
    flex-direction:column;
}
.title-enter {
    flex:6;
    display:flex;
    flex-direction:row;
    margin-top:30rpx;
}
.title-enter-unit {
    flex:1;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content: center;
    font-size:28rpx;
}
.title-enter-unit view image {
    height:64rpx;
    width:64rpx;
}
.title-enter-font {
    flex:4;
    font-size:28rpx;
    display:flex;
    align-items:center;
    justify-content:center;
}
.title-enter-font-context {
    display:flex;
    flex-direction:row;
    justify-content: space-between;
    width:95%;
    height:60rpx;
    line-height:60rpx;
    background-color:#f5f5f5;
    padding-left:30rpx;
    border-radius:50rpx;
}
.title-enter-font-context view {
    position:relative;
    z-index:998;
    padding-right:30rpx;
    padding-left:30rpx;
    border-radius:50rpx;
    background-color:#ffc9cb;
    color:#8b0000;
}
/**
背景颜色
 */
.bg {
    height:765rpx;
    background-color:#f5f5f5;
    border-radius:0 0 20rpx 20rpx;
}
/**
用户发布的信息
 */
.username-data {
    height:575rpx;
    position:absolute;
    top:570rpx;
    z-index:998;
    width:95%;
    left:2.5%;
}
.username-top {
    display:flex;
    flex-direction:column;
    background-color:white;
    height:220rpx;
}
.username-bottom {
    display:flex;
    flex-direction:column;
    background-color:white;
    height:350rpx;
    margin-top:5rpx;
}
.username-data-unit {
    flex:1;
    width:85%;
    margin:0 auto;
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    align-items:center;
    font-size:32rpx;
}
/**
分割线
 */
.hr {
    margin-top:5rpx;
}