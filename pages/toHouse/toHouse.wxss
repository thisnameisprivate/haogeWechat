@import "/utils/publics/pagetitle.wxss";
/**
引入横向滚动列表样式(默认为景区滚动、如需要电商样式添加scrollview-shop.wxss)
 */
@import "/utils/publics/scrollview.wxss";
/**
引入list样式
 */
@import "/utils/list.wxss";
/**
引入无限加载商品样式
 */
@import "/utils/publics/scrollview-shop.wxss";


.boutique-house-font {
    width:95%;
    height:80rpx;
    margin:auto;
    margin-top:50rpx;
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    align-items:center;
}
.boutique { font-size:36rpx; color:red; }
.boutique-font { font-size:28rpx; }
/**
精品好房横向滚动列表样式
 */
.attractions { height:220rpx; }
.attractions-unit { height:200rpx; }
.rekuan-font {
    position:absolute;
    top:130rpx;
    z-index:999;
    height:70rpx;
    line-height:70rpx;
    width:260rpx;
    background-color:black;
    opacity:0.2;
    color:white;
    font-size:28rpx;
}
.attractions-unit-image { background-color:darkolivegreen;  border-radius: 7rpx; }
/**
list样式
 */
.listMerage { height:100rpx;}
.unit-font { text-align:right; flex:7; }
.unit-handleList { flex:3; }
/**
无限加载房子列表
 */
.house-image {
    height:300rpx;
    width:100%;
    position:relative;
    margin-bottom:10rpx;
}
.house-unit-image {
    height:300rpx;
    width:100%;
}
.house-unit-image image {
    width:100%;
    height:100%;
    background-color:darkolivegreen;
    border-radius: 10rpx 10rpx 0 0;
}
.house-unit-gps {
    background-color:gray;
    position:absolute;
    z-index:998;
    top:10rpx;
    left:10rpx;
    width:60%;
    font-size:24rpx;
    color:white;
    opacity:0.3;
    text-align:center;
    border-radius:15rpx;
    height:50rpx;
    display:flex;
    flex-direction:row;
}
.house-unit-gps-image {
    flex:2;
}
.house-unit-gps-image image {
    height:100%;
    width:100%;
}
.house-unit-font {
    flex:8;
    display:flex;
    align-items:center;
}
.house-unit-status {
    width:20%;
    font-size:24rpx;
    color:#6666ff;
    background-color:#66ccff;
    border-radius:5rpx;
    position:absolute;
    z-index:998;
    bottom:-10rpx;
    left:10rpx;
    display:flex;
    justify-content:center;
}
.house-bottom-text {
    width:100%;
    border-top:0;
    border-radius:0rpx 0rpx 10rpx 10rpx;
    padding:5rpx;
    padding-bottom:10rpx;
    box-shadow: 10rpx 10rpx 5rpx 7rpx rgba(204, 204, 204, 0.1);
}
.house-text {
    height:80rpx;
    width:100%;
    font-size:26rpx;
    font-weight:600;
}
.house-maxmin {
    height:60rpx;
    width:100%;
    font-size:24rpx;
    color:grap;
    display:flex;
    align-items:center;
}
.house-wages {
    height:40rpx;
    color:red;
    font-size:26rpx;
}