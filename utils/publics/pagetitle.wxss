/* 顶部定位、搜索模块 */
.topTitle{
    height:80rpx;
    width:100%;
    display:flex;
    flex-direction:row;
    padding-bottom:20rpx;
    background-color:#fda89b;
}
.topMap{
    flex:4;
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
    font-size:24rpx;
}
.topMapImg{
    flex:2.5;
    width:100%;
    /* 此处若是写高度会造成图标无法上下居中的bug */
    text-align:right;
}
.topMapImg image{
    height:40rpx;
    width:40rpx;
}
.topMapText{
    flex:7.5;
}
.topSearch{
    flex:6;
    height:55rpx;
    display:flex;
    align-items:center;
    flex-direction:row;
    border:1rpx solid rgba(204, 204, 204, 0.6);
    border-radius:20rpx;
    margin:auto;
    margin-right:40rpx;
}
.searchImg{
    flex:1;
    width:100%;
    height:100%;
    display:flex;
    justify-content:center;
    align-items:center;
    background-color:white;
    border-radius:20rpx 0 0 20rpx;
}
.searchImg image{
    height:40rpx;
    width:40rpx;
}
.searchText{
    flex:9;
    font-size:24rpx;
    display:flex;
    height:100%;
    justify-content:center;
    align-items:center;
    background-color:white;
    border-radius:0 20rpx 20rpx 0;
}